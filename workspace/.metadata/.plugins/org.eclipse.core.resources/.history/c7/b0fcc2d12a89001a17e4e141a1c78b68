package com.Test1;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

/*
 *   把彩色照片转换成黑白照片的 java程序。
         从控制台输入照片的路径，然后输出转换后的照片文件到原照片所在的路径下
 *   
 * 
 */
public class Test {

	public static void main(String[] args) {
	
//		创建键盘录入对象,接受文件路径
//		Scanner sc = new Scanner(System.in);
//		System.out.println("请输入要转换的图片路径");
		BufferedImage image = null;
		File file = null;
		
		try{
//			file = new File(sc.nextLine()); 
			file = new File("C:\\Java-practice\\workspace\\TansformPicture\\001.jpg"); 
			image = ImageIO.read(file);
//		灰度图直观地讲就是将原来的RGB图像转换为只有灰度级的图像，做这一步处理也比较简单，只要把每个像素点的RGB值拿出来，
//		算一下他们的平均值(R+G+B)/3，然后再替换原来的RGB值	
			int width = image.getWidth();
			int height = image.getHeight();
			
			for(int j=0; j < height; j++){
				for(int i = 0; i< width; i++){
					int p = image.getRGB(i, j);
					
					int a = (p >> 24) & 0xff;
					int r = (p >> 16) & 0xff;
					int g = (p >> 8) & 0xff;
					int b = p  & 0xff;
					
					int average = (r + g + b) / 3;
					
					p = (a << 24) | (average<< 16) | average;
					
					image.setRGB(i, j, p);		
					
				}
			}
			
			file  = new File("C:\\Java-practice\\workspace\\TansformPicture\\Out.jpg");
			ImageIO.write(image, "jpg", file);
			
		}catch (IOException e) {
		         System.out.println(e);
		}
		
		

	}

}
